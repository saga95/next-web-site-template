# Staging Environment
# Used for pre-production testing

# Application
NEXT_PUBLIC_APP_NAME=My Next Template (Staging)
NEXT_PUBLIC_APP_URL=https://staging.yourapp.com

# API
NEXT_PUBLIC_API_URL=https://api-staging.yourapp.com

# EmailJS (use staging credentials)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_staging_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_staging_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_staging_public_key

# Analytics (enabled, use test/staging IDs)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_GA_ID=G-STAGING-XXXX
NEXT_PUBLIC_GTAG_ID=GT-STAGING-XXXX

# Error Tracking (enabled)
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_SENTRY_DSN=https://staging-dsn@sentry.io/project-id

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_I18N=true

# Environment
NODE_ENV=production
