# Production Environment
# ⚠️ NEVER COMMIT REAL SECRETS TO THIS FILE!
# This file contains structure only. Set actual values in your deployment platform.

# Application
NEXT_PUBLIC_APP_NAME=My Next Template
NEXT_PUBLIC_APP_URL=https://yourapp.com

# API
NEXT_PUBLIC_API_URL=https://api.yourapp.com

# EmailJS
NEXT_PUBLIC_EMAILJS_SERVICE_ID=<set-in-deployment-platform>
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=<set-in-deployment-platform>
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=<set-in-deployment-platform>

# Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_GA_ID=<set-in-deployment-platform>
NEXT_PUBLIC_GTAG_ID=<set-in-deployment-platform>

# Error Tracking
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_SENTRY_DSN=<set-in-deployment-platform>

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_I18N=true

# Environment
NODE_ENV=production
